<Config>
	<Parameter>
		<Name>Scenario</Name>
		<Description><info><![CDATA[This is a configuration file editor designed to choose parameter values before launching Evolife simulations.<br><br>Its use is rather intuitive. You may click directly on values you want to change, or navigate with arrows and use the [F2] key to edit values.<br><br>Pay attention to explanations displayed in this panel.]]></info></Description>
		<Parameter>
			<Name>CurrentScenario</Name>
			<Parameter>
				<Name>ScenarioName</Name>
				<Description><info><![CDATA[Simulmates a foraging ant colony]]></info></Description>
				<Value>Ants</Value>
			</Parameter>
			<Parameter>
				<Name>ScenarioFileName</Name>
				<Value>Ants.evo</Value>
			</Parameter>
		</Parameter>
	</Parameter>
	<Parameter>
		<Name>Simulation</Name>
		<Parameter>
			<Name>DisplayPeriod</Name>
			<Description><info><![CDATA[Display period]]></info></Description>
			<Value>10</Value>
		</Parameter>
		<Parameter>
			<Name>TimeLimit</Name>
			<Description><info><![CDATA[Max number of simulation steps]]></info></Description>
			<Value>500000</Value>
		</Parameter>
		<Parameter>
			<Name>ApplicationDir</Name>
			<Description><info><![CDATA[Directory where the simulation can be found]]></info></Description>
			<Value>.</Value>
		</Parameter>
		<Parameter>
			<Name>Target</Name>
			<Description><info><![CDATA[Programme to be executed]]></info></Description>
			<Value>Ants.py</Value>
		</Parameter>
		<Parameter>
			<Name>RunConfigFile</Name>
			<Description><info><![CDATA[Parameter values that will be read by the programme]]></info></Description>
			<Value>_Params.evo</Value>
		</Parameter>
		<Parameter>
			<Name>Title</Name>
			<Description><info><![CDATA[Name of the present Configuration Editor]]></info></Description>
			<Value>Evolife_Ants</Value>
		</Parameter>
		<Parameter>
			<Name>Icon</Name>
			<Description><info><![CDATA[local path to window icon]]></info></Description>
			<Value>ants-1.gif</Value>
		</Parameter>
		<Parameter>
			<Name>WindowSize</Name>
			<Description><info><![CDATA[Size of window for display]]></info></Description>
			<Value>1200</Value>
		</Parameter>
	</Parameter>
	<Parameter>
		<Name>Ecology</Name>
		<Parameter>
			<Name>LandSize</Name>
			<Description><info><![CDATA[Logical size of the grid.<br><br>A smaller value will speed up the programme.]]></info></Description>
			<Value>100</Value>
		</Parameter>
		<Parameter>
			<Name>PopulationSize</Name>
			<Description><info><![CDATA[total number of ants]]></info></Description>
			<Value>30</Value>
		</Parameter>
		<Parameter>
			<Name>FoodSources</Name>
			<Parameter>
				<Name>NbFoodSources</Name>
				<Description><info><![CDATA[number of food sources]]></info></Description>
				<Value>10</Value>
			</Parameter>
			<Parameter>
				<Name>FoodSourceSize</Name>
				<Description><info><![CDATA[Size of food source]]></info></Description>
				<Value>2</Value>
			</Parameter>
			<Parameter>
				<Name>FoodQuantity</Name>
				<Description><info><![CDATA[Quantity of food available at food source]]></info></Description>
				<Value>100</Value>
			</Parameter>
		</Parameter>
		<Parameter>
			<Name>Pheromones</Name>
			<Parameter>
				<Name>NPDeposit</Name>
				<Description><info><![CDATA[default quantity of negative pheromon laid down by ants]]></info></Description>
				<Value>50</Value>
			</Parameter>
			<Parameter>
				<Name>PPMax</Name>
				<Description><info><![CDATA[maximal amount of pheromone that can be laid down on the way back to the colony]]></info></Description>
				<Value>1000</Value>
			</Parameter>
			<Parameter>
				<Name>Evaporation</Name>
				<Description><info><![CDATA[absolute amount of pheromone decrease per time unit]]></info></Description>
				<Value>0</Value>
			</Parameter>
			<Parameter>
				<Name>SniffingDistance</Name>
				<Description><info><![CDATA[distance from which pheromone is perceived]]></info></Description>
				<Value>2</Value>
			</Parameter>
			<Parameter>
				<Name>Saturation</Name>
				<Description><info><![CDATA[maximum amount of pheromon that a cell can carry]]></info></Description>
				<Value>1000</Value>
			</Parameter>
			<Parameter>
				<Name>Exploration</Name>
				<Description><info><![CDATA[Probability (in %) that the ant moves randomly]]></info></Description>
				<Value>30</Value>
			</Parameter>
		</Parameter>
	</Parameter>
</Config>
